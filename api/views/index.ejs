<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset password</title>
    <script>
      function mouseOver() {
        const btn = document.querySelector(".btn");
        btn.style.background = "black";
      }
      function mouseOut() {
        const btn = document.querySelector(".btn");
        btn.style.background = "#f5385d";
      }

      var status = `<%- JSON.stringify(status) %>`;
      if (JSON.parse(status) == "verified") {
        if (confirm("Do u want to login?")) {
          window.location.href = "http://localhost:5173/login";
        }
      }
    </script>
  </head>
  <body
    style="
      padding: 0;
      margin: 0;
      background: rgb(238, 238, 238);
      font-size: 20px;
    "
  >
    <div
      style="
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      "
    >
      <div style="text-align: center; margin-top: -80px">
        <h3 style="color: #f5385d">Airbnb</h3>
        <h2>Reset password for</h2>
        <p><%= email%></p>
      </div>
      <form method="post" style="display: flex; flex-direction: column; gap: 1">
        <input
          type="password"
          name="password"
          id="password"
          placeholder="New password"
          required
          style="
            padding: 10px;
            width: 300px;
            border-radius: 14px;
            border: none;
            box-shadow: 2px 1px 2px 0 gray;
          "
        /><br />
        <input
          type="password"
          name="confirm_password"
          id="confirm_password"
          placeholder="Confirm password"
          required
          style="
            padding: 10px;
            width: 300px;
            border-radius: 14px;
            border: none;
            box-shadow: 2px 1px 2px 0 gray;
          "
        /><br />
        <input
          class="btn"
          type="submit"
          value="Submit"
          style="
            border: none;
            padding: 10px;
            border-radius: 12px;
            color: #fff;
            background-color: #f5385d;
            cursor: pointer;
          "
          onmouseover="mouseOver()"
          onmouseout="mouseOut()"
        />
      </form>
    </div>
  </body>
</html>
